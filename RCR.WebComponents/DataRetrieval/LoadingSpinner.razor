<div class="@PositionClasses @Classes">
    <div class="spinner-border @SpinnerColor" style="width: @(SizeInRem)rem; height: @(SizeInRem)rem;" role="status"></div>
    <span class="visually-hidden">Loading...</span>
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public int SizeInRem { get; set; } = 3;

    [Parameter]
    public string Classes { get; set; } = "";

    [Parameter]
    public string PositionClasses { get; set; } = "d-flex flex-column justify-content-center align-items-center h-100 gap-3";
    
    [Parameter]
    public string SpinnerColor { get; set; } = "text-primary";
}